{
	"id": "grant",
	"type": "object",
	"properties": {
		"id": {
			"type": "array",
			"title": "Grant ID",
			"additionalItems": false,
			"items": [
				{
					"type": "string",
					"title": "User ID"
				},
				{
					"type": "string",
					"title": "Client ID"
				}
			]
		},
		"nonce": {
			"type": ["null", "string"],
			"title": "Authorization Code",
			"default": null
		},
		"refresh_token": {
			"type": "string",
			"title": "Refresh Token"
		},
		"scopes": {
			"type": "array",
			"items": {
				"type": "string",
				"pattern": "^(([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+)\\.)*([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+):(([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+)\\.)*([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+):(([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+)\\.)*([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+)$"
			},
			"default": []
		},
		"last_updated": {
			"type": "number",
			"title": "Last Updated",
			"description": "Timestamp (in seconds) when the grant was last updated."
		},
		"created": {
			"type": "number",
			"description": "Timestamp (in seconds) when the grant was created."
		}
	},
	"required": ["id"]
}
