{
	"id": "role",
	"type": "object",
	"properties": {
		"id": {
			"type": "string",
			"title": "Role ID",
			"pattern": "^[a-zA-Z0-9_\\-]+$"
		},
		"name": {
			"type": "string",
			"title": "Name",
			"default": ""
		},
		"assignments": {
			"type": "object",
			"title": "Assignments",
			"additionalProperties": {
				"type": "boolean"
			},
			"default": {}
		},
		"scopes": {
			"type": "array",
			"items": {
				"type": "string",
				"title": "Scopes",
				"pattern": "^(([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+)\\.)*([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+):(([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+)\\.)*([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+):(([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+)\\.)*([a-zA-Z0-9_\\-]+|(\\*(?!\\*\\*))+)$"
			},
			"default": []
		}
	},
	"additionalProperties": false
}
