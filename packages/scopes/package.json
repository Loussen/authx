  "main": "dist",
  "name": "@authx/scopes",
  "repository": "https://github.com/the-control-group/authx",
  "scripts": {
    "bootstrap": "node dist/bootstrap.js",
    "format": "prettier --list-different --write '**/*.{json,yml,md,ts}'",
    "lint": "prettier -c '**/*.{json,yml,md,ts}' && eslint src --ext ts",
    "prepare": "rm -rf dist && tsc",
    "test": "ava --verbose dist/*.test.js",
    "watch": "rm -rf dist && tsc --watch",
    "start:development": "yarn watch & NODE_ENV=development nodemon --delay 2 --inspect dist/server",
    "start:production": "NODE_ENV=production npm start",
    "start": "node dist/server"
  },
  "types": "dist/index.d.ts",
  "version": "2.2.0"
