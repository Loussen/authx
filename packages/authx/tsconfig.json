{
  "compilerOptions": {
    "lib": ["es2018"],
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "",
    "paths": {
      "graphql": ["@types/graphql"],
      "graphql/*": ["@types/graphql/*"]
    }
  },
  "include": ["./src/**/*"]
}
