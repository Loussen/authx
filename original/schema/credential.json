{
	"id": "credential",
	"type": "object",
	"properties": {
		"id": {
			"type": "array",
			"title": "Credential ID",
			"additionalItems": false,
			"items": [
				{
					"type": "string",
					"title": "Authority ID",
					"pattern": "^[a-zA-Z0-9_\\-]+$"
				},
				{
					"type": "string",
					"title": "Authority User ID"
				}
			]
		},
		"user_id": {
			"type": "string"
		},
		"details": {
			"type": "object",
			"additionalProperties": true,
			"description": "Credential details specific to the authority.",
			"default": {}
		},
		"profile": {
			"title": "Profile",
			"default": null,
			"anyOf": [{ "$ref": "profile" }, { "type": "null" }]
		},
		"last_used": {
			"type": ["number", "null"],
			"description": "Timestamp (in seconds) when the credential was last used.",
			"default": null
		}
	},
	"additionalProperties": false,
	"required": ["id", "user_id"]
}
