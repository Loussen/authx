  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.4.0",
    "@typescript-eslint/parser": "^1.4.0",
    "ava": "^1.2.1",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.0",
    "prettier": "^1.16.4",
