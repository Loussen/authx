{
	"id": "authority",
	"type": "object",
	"properties": {
		"id": {
			"type": "string",
			"title": "Authority ID",
			"pattern": "^[a-zA-Z0-9_\\-]+$"
		},
		"strategy": {
			"type": "string",
			"title": "Strategy",
			"description": "The AuthX strategy to use."
		},
		"name": {
			"type": "string",
			"title": "Name",
			"description": "The name of the authority.",
			"default": ""
		},
		"details": {
			"type": "object",
			"additionalProperties": true,
			"description": "Configuration details specific to the strategy.",
			"default": {}
		}
	},
	"additionalProperties": false,
	"required": ["strategy"]
}
